<%- include('partials/header') %>

<main>
    <div class="container" style="margin-top: 20px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Panel de Oficios (Admin)</h1>
            <a href="/oficios" class="btn btn-primary">Registrar Nuevo Oficio</a>
        </div>

        <p>A continuaci√≥n se muestran todos los oficios registrados en el sistema.</p>

        <form method="GET" action="/admin/oficios" class="mb-4">
            <div class="input-group">
                <input 
                    type="search" 
                    class="form-control"
                    id="busqueda"
                    name="busqueda" 
                    placeholder="Buscar por consecutivo, destinatario, asunto, departamento o folio..."
                    
                    value="<%= (typeof busqueda !== 'undefined' ? busqueda : '') %>"
                >
                <button class="btn btn-outline-secondary" type="submit">Buscar</button>
            </div>
        </form>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Consecutivo</th>
                    <th>Fecha</th>
                    <th>Destinatario</th>
                    <th>Asunto</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (oficios && oficios.length > 0) { %>
                    <% oficios.forEach(oficio => { %>
                        <tr>
                            <td><%= oficio.consecutivo %></td>
                            <td><%= new Date(oficio.fecha).toLocaleDateString('es-MX', { timeZone: 'UTC' }) %></td>
                            <td><%= oficio.destinatario %></td>
                            <td><%= oficio.asunto.substring(0, 50) %>...</td>
                            <td>
                                <a href="/oficio/<%= oficio.id %>" class="btn btn-sm btn-info">Ver Detalle</a>
                                <a href="/oficio/editar/<%= oficio.id %>" class="btn btn-sm btn-warning ms-2">Editar</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    
                    <tr>
                        <% if (typeof busqueda !== 'undefined' && busqueda.trim() !== '') { %>
                            <td colspan="5" class="text-center">
                                No se encontraron resultados para "<strong><%= busqueda %></strong>".
                            </td>
                        <% } else { %>
                            <td colspan="5" class="text-center">
                                No hay oficios registrados en la base de datos.
                            </td>
                        <% } %>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</main>

<%- include('partials/footer') %>